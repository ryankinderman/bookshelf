<%= error_messages_for :book %>
<div>
  <label for="title">Title</label>
  <%= f.text_field :title %>
</div>
<div>
  <label for="author_id">Author</label>
	<%= f.select :author_id, 
    Author.find(:all).collect { |author| [author.full_name, author.id] }, 
    {:include_blank => true} %>
</div>

<%= submit_tag %>
<%= link_to 'Cancel', :action => 'index' %>