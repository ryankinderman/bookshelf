<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
    <th>Author</th>
		<th>Actions</th>
	</tr>
	<% @books.each do |book| %>
  <tr>
  	<td><%= book.title %></td>
		<td><%= book.authors.collect { |a| a.full_name }.join("; ") %></td>
		<td>
			<%= link_to 'Edit', edit_book_url(:id => book.id) %> 
			<%= link_to 'Remove', book_url(:id => book.id), :method => :delete %>
		</td>
  </tr>	
	<% end %>
</table>

<%= link_to 'New Book', new_book_url %>