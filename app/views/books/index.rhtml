<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
    <th>Author</th>
		<th>Actions</th>
	</tr>
	<% @books.each do |book| %>
  <tr>
  	<td><%= book.title %></td>
		<td><%= book.author %></td>
		<td><%= link_to 'Edit', :action => 'edit', :id => book.id %></td>
  </tr>	
	<% end %>
</table>

<%= link_to 'New Book', :controller => 'books', :action => 'new' %>